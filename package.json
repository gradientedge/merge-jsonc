{
  "name": "@gradientedge/merge-jsonc",
  "version": "0.1.0",
  "description": "JSON/JSONC/JSON5 deep-merger CLI for Node 22+",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gradientedge/merge-jsonc.git"
  },
  "bugs": {
    "url": "https://github.com/gradientedge/merge-jsonc/issues"
  },
  "homepage": "https://github.com/gradientedge/merge-jsonc#readme",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "restricted"
  },
  "type": "module",
  "bin": {
    "merge-jsonc": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": {
      "import": "./dist/cli.js"
    }
  },
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "prepublishOnly": "npm run format:check && npm run lint && npm run test && npm run build"
  },
  "dependencies": {
    "deepmerge": "^4.3.1",
    "json5": "^2.2.3",
    "jsonc-parser": "^3.3.1",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/json5": "^0.0.30",
    "@types/node": "^22.7.5",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "tsup": "^8.2.4",
    "typescript": "^5.6.2",
    "vitest": "^3.2.4"
  },
  "files": ["dist"],
  "sideEffects": false
}
