{
  "name": "@gradientedge/merge-jsonc",
  "version": "0.0.0-development",
  "description": "JSON/JSONC/JSON5 deep-merger CLI for Node 22+",
  "license": "MIT",
  "author": "Gradient Edge",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gradientedge/merge-jsonc.git"
  },
  "bugs": {
    "url": "https://github.com/gradientedge/merge-jsonc/issues"
  },
  "homepage": "https://github.com/gradientedge/merge-jsonc#readme",
  "keywords": ["json", "jsonc", "json5", "merge", "cli", "config", "configuration", "deep-merge"],
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": ["main"]
  },
  "type": "module",
  "bin": {
    "merge-jsonc": "dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": {
      "import": "./dist/cli.js"
    }
  },
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run --coverage",
    "validate": "npm run format:check && npm run lint && npm run test",
    "prepublishOnly": "npm run build",
    "prepare": "husky"
  },
  "dependencies": {
    "deepmerge": "^4.3.1",
    "json5": "^2.2.3",
    "jsonc-parser": "^3.3.1",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.37.0",
    "@semantic-release/changelog": "^6.0.3",
    "@types/node": "^24.6.2",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "semantic-release": "^25.0.2",
    "tsdown": "^0.15.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "files": ["dist"],
  "sideEffects": false
}
